@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/images/signin-image.jpg" alt="sing up image"></figure>
                        
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Create an account</a>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Sign In</h2>
                <form asp-action="Login">
                    <div class="form-group">
                        <label class="control-label"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="UsernameOrEmail" class="form-control" placeholder="Your Email" />
                               
                    </div>
                    <div class="form-group">
                        <label class="control-label"> <i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                               
                    </div>

                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ForgotPassword">Forgot Password</a>
                    <div class="form-group form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" value="Login" class="form-submit" />
                    </div>
                </form>
                <div class="social-login">
                    <span class="social-label">Or login with</span>
                    <ul class="socials">
                        <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                        <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                        <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
