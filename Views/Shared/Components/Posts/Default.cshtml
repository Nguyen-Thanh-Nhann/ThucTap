@model IEnumerable<TT_ECommerce.Models.EF.TbPost>

<!-- Post -->
<div class="col-12">
    <div class="section-title bb-center" data-aos="fade-up" data-aos-duration="1000"
         data-aos-delay="200">
        <div class="section-detail">
            <h2 class="bb-title">Tin tức <span>mới</span></h2>
            <p>Cập nhật những tin tức mới nhất</p>
        </div>
    </div>
</div>
<section class="section-blog padding-b-50 padding-t-100">
           
    <div class="container">
        <div class="row">
     
            <div class="col-12">
                <div class="blog-2-slider owl-carousel">
                    @foreach (var item in Model)
                    {
                    <div class="blog-2-card" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
                    
                            <div class="blog-img">
                                <img src="@Url.Content(item.Image)" alt="@item.Title">
                            </div>
                            <div class="blog-contact">
                                <span>@item.CreatedDate - @item.CreatedBy</span>
                                <h4>
                                    <a href="@Url.Action("Detail" , "Posts", new { id = item.Id })">@item.Title</a>
                                </h4>
                            </div>
                     
                    </div>
                    }
                </div>
            </div>
         
        </div>
    </div>
 
</section>