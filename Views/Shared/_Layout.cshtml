<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="author" content="Untree.co" />
    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, ecommerce, shop" />

    <title>@ViewData["Title"] - TT_ECommerce</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/TT_ECommerce.styles.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/tiny-slider.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.3/tiny-slider.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.3/min/tiny-slider.js"></script>
    <!-- Favicon -->
    <link rel="shortcut icon" href="favicon.png" />

    <!-- css của productdetails-->

    <!-- Libraries Stylesheet -->
    <link href="productdetails/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="productdetails/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

</head>
<body>
    
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @await Html.PartialAsync("_Header")
            <div>
                 @RenderBody()
            </div>
            @await Html.PartialAsync("_Footer")
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TT_ECommerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script>
        var slider = tns({
            container: '.testimonial-slider',
            items: 1,
            slideBy: 'page',
            autoplay: true,
            controlsContainer: "#testimonial-nav",
            nav: true,
            navPosition: "bottom",
            autoplayButtonOutput: false
        });
    </script>
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- scrips của ProductDetails -->
    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="productdetails/lib/easing/easing.min.js"></script>
    <script src="productdetails/lib/waypoints/waypoints.min.js"></script>
    <script src="productdetails/lib/lightbox/js/lightbox.min.js"></script>
    <script src="productdetails/lib/owlcarousel/owl.carousel.min.js"></script>
    <script>
        let count = 0;

        function increment() {
            count++;
            document.getElementById('number').value = count;
        }

        function decrement() {
            if (count > 0) {
                count--;
                document.getElementById('number').value = count;
            }
        }
    </script>
    <!-- Template Javascript -->
    <script src="productdetails/js/main.js"></script>
</body>
</html>
